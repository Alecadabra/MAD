<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.TitleActivity"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        style="@style/Widget.AppCompat.Button.Small"
        android:backgroundTint="#ffffff"
        android:gravity="center"
        android:clickable="false"
        tools:targetApi="lollipop"
        android:padding="32dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textStyle="bold"
            android:layout_marginBottom="0dp"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:gravity="center"
            android:text="By Alec Maughan"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <Button
            android:id="@+id/titleActivityNewGame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Game"/>

        <Button
            android:id="@+id/titleActivityContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continue"/>

        <Button
            android:id="@+id/titleActivitySettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Settings"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_grass3"
        android:contentDescription="Background" />

</androidx.constraintlayout.widget.ConstraintLayout>