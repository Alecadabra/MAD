<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:id="@+id/gridCellLinearLayout1"
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        app:layout_constraintLeft_toRightOf="@+id/gridCellLinearLayout2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/gridCellTopLeft"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="Top Left"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintWidth_percent="0.5"
            app:layout_constraintHeight_percent="0.5"
            android:src="@android:color/transparent" />

        <ImageView
            android:id="@+id/gridCellBottomLeft"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="Bottom Left"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintWidth_percent="0.5"
            app:layout_constraintHeight_percent="0.5"
            android:src="@android:color/transparent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/gridCellLinearLayout2"
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/gridCellTopRight"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="Top Right"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintWidth_percent="0.5"
            app:layout_constraintHeight_percent="0.5"
            android:src="@android:color/transparent" />

        <ImageView
            android:id="@+id/gridCellBottomRight"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="Bottom Right"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintWidth_percent="0.5"
            app:layout_constraintHeight_percent="0.5"
            android:src="@android:color/transparent" />
    </LinearLayout>

    <ImageView
        android:id="@+id/gridCellStructureImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:contentDescription="The structure built on this cell"
        android:src="@android:color/transparent" />

</androidx.constraintlayout.widget.ConstraintLayout>